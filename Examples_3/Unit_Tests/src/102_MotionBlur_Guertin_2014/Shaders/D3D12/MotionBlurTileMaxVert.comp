RWTexture2D<float2> TileMaxVert: register(u0);
Texture2D<float2> TileMaxHorzTexture : register(t0);

cbuffer cbMotionBlurConsts : register(b3)
{
	int4 consts;
	int4 sizes;
}

float2 vmax(float2 v0, float2 v1)
{
	return dot(v0, v0) < dot(v1, v1) ? v1 : v0;
}

[numthreads(1, 16, 1)]
void main(uint3 DTid : SV_DispatchThreadID)
{
	if (sizes.z < DTid.y)
	{
		TileMaxVert[DTid.xy] = 0;
		return;
	}
	int2 coords = int2(DTid.x, DTid.y * consts.x);
	float2 tile_max = float2(0.0f, 0.0f);
	for (int j = 0; j < consts.x; ++j)
	{
		int3 xyl = int3(coords, 0);
		xyl.y += j;
		float2 velocity = TileMaxHorzTexture.Load(xyl);
		tile_max = vmax(velocity, tile_max);
	}
	TileMaxVert[DTid.xy] = tile_max;
}
